<!DOCTYPE html>
<html lang="en">
<head><%- include('../partials/head') %></head>
<body class="container">

<header>
    <%- include('../partials/header') %>
</header>

<main class="mt-3 mb-3">
    <form action="/event-show/create" method="POST">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h4><%= title %></h4>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label>Service provider</label>
                            <select name="serviceProviderId" class="form-control select">
                                <option>Select a service provider</option>
                            <% serviceProviders.forEach((serviceProvider) => { %>
                                <option value="<%= serviceProvider._id %>">
                                    <%= serviceProvider.name + '-' + serviceProvider.mobile %>
                                </option>
                            <% }) %>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Name</label>
                            <input type="text" class="form-control" name="name">
                        </div>
                        <div class="form-group">
                            <label>Start Time</label>
                            <input type="time" class="form-control" name="startTime">
                        </div>
                        <div class="form-group">
                            <label>End Time</label>
                            <input type="time" class="form-control" name="endTime">
                        </div>
                        <div class="form-group">
                            <label>Date</label>
                            <input type="date" class="form-control" name="date">
                        </div>
                    </div>
                </div>
            </div>
        
            <div class="col-md-12 mt-4">
                <div class="card">
                    <div class="card-header">
                        <h4>Seat Categories</h4>
                    </div>
                    <div class="card-body">
                        <h5>Category 1</h5>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Name</label>
                                    <input type="text" class="form-control" name="categoryNames">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Number of seats</label>
                                    <input type="text" class="form-control" name="numOfSeats">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Price</label>
                                    <input type="text" class="form-control" name="prices">
                                </div>
                            </div>
                        </div>
                        <h5>Category 2</h5>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Name</label>
                                    <input type="text" class="form-control" name="categoryNames">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Number of seats</label>
                                    <input type="text" class="form-control" name="numOfSeats">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Price</label>
                                    <input type="text" class="form-control" name="prices">
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </div>
        </div> 
    </form>
</main>

<footer>
    <%- include('../partials/footer') %>
</footer>

<script>

</script>

</body>
</html>