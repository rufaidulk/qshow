<!DOCTYPE html>
<html lang="en">
<head><%- include('../partials/head') %></head>
<body class="container">

<header>
    <%- include('../partials/header') %>
</header>

<main class="mt-3 mb-3">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="float-left"><%= title %></h4>
                    <a href="/event-show/create" class="btn btn-primary float-right">
                        New Event
                    </a>
                </div>
                <div class="card-body">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Service Provider</th>
                                <th scope="col">Event</th>
                                <th scope="col">Start Time</th>
                                <th scope="col">End Time</th>
                                <th scope="col">Date</th>
                                <th scope="col">View</th>
                                <th scope="col">Edit</th>
                                <th scope="col">Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% eventShows.forEach((eventShow, index) => { %>
                            <tr>
                                <th scope="row"><%= index + 1 %></th>
                                <td>
                                    <a href="/service-provider/view/<%=eventShow.serviceProvider._id %>">
                                        <%= eventShow.serviceProvider.name %>
                                    </a>
                                </td>
                                <td><%= eventShow.name %></td>
                                <td><%= eventShow.startTime.toLocaleTimeString() %></td>
                                <td><%= eventShow.endTime.toLocaleTimeString() %></td>
                                <td><%= eventShow.date.toLocaleDateString() %></td>
                                <td>
                                    <a href="/event-show/view/<%=eventShow._id %>" class="btn btn-info">
                                        view
                                    </a>
                                </td>
                                <td>
                                    <a href="/event-show/update/<%=eventShow._id %>" class="btn btn-info">
                                        Edit
                                    </a>
                                </td>
                                <td>
                                    <a href="/event-show/delete/<%=eventShow._id %>" class="btn btn-danger">
                                        Delete
                                    </a>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>    
</main>

<footer>
    <%- include('../partials/footer') %>
</footer>

</body>
</html>